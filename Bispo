void moverBispo(){
	if(tabu[linha][colunaNum]=='B'||tabu[linha][colunaNum]=='b'){
	int subtrL=abs(inha2-linha);
	int subtrC = abs(colunaNum2 - colunaNum;
	int vitima;
	// VERIFICAR SE O NUMERO DE LINHAS E COLUNAS MOVIMENTADAS SAO IGUAIS
	if(subtrL!= subtrC){
		printf("Movimentação inválida: O bispo so pode se mover pela diagonal\n");
	}else{
		int invalido;
		for(int i = linha; i<= linha2;i++){
			for(int j = colunaNum; i<= colunaNum2;i++){
				if(tabu[i][j]!=' '){
					printf("Movimentação inválida: Há uma peça no caminho!\n");
					invalido =1;
					break;
				}
				if(invalido ==1) break;
		}
	}
	if(invalido==1){
		digitePecaAtual();
	}else{
	verificarPecasAoRedor(&vitima);
	if(vitima==jogador){
		printf("Movimentação inválida: Não pode capturar suas peças!\n");
	}else{
		adicionarPiece();
	}
	}
}
}
